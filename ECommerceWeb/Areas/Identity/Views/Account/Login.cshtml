﻿﻿
@model LogIn

<div class="container border p-4 col-lg-5">
    <form method="post" class="m-3">
            <h3>Log In</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username -->
            <div class="form-group col mb-3 p-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group col mb-3 p-1">﻿
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary form-control">Log In</button>
            <div class="row mt-3">
                <a asp-action="signup" class="btn btn-link">or create an account</a>
            </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}