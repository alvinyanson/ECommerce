@model IEnumerable<Category>

<div class="row mb-3">
    <div class="col-auto text-end">
        <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Create New Category
        </a>
    </div>
</div>

<div class="row">
    @foreach (var product in Model.OrderBy(u => u.DisplayOrder))
    {
        <div class="col-12 col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.DisplayOrder</p>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        Edit
                    </a>
                    <a onClick="Delete('/admin/category/delete/@product.Id')" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/category.js"></script>
}