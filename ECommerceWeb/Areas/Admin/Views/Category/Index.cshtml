@model IEnumerable<Category>

<div class="row mb-3">
    <div class="col-auto text-end">
        <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" class="btn btn-secondary">
            Create New Category
        </a>
    </div>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-6 col-sm-4 col-lg-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">@product.Name</h5>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-secondary btn-sm">
                        Edit
                    </a>
                    <a onClick="Delete('/admin/category/delete/@product.Id')" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/category.js"></script>
}