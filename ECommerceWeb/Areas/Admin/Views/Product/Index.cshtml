@model IEnumerable<Product>

<div class="row mb-3">
    <div class="col-auto text-end">
        <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-secondary">
            Create New Product
        </a>
    </div>
</div>


<div class="row">
    @foreach (var product in Model.OrderByDescending(product => product.Id))
    {
        <div class="col-6 col-sm-4 col-lg-3 col-xl-2 mb-4">
            <img src="@Url.Content("~/" + product.ImageUrl)" class="rounded-4" style="object-fit: cover; height: 200px">

            <div class="mt-2">
                <span class="d-block">@product.Name</span>
                <span class="d-block fw-bold">@product.Price.ToString("c")</span>
                <div class="d-flex mt-2">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-secondary btn-sm">
                        Edit
                    </a>
                    <a onClick="Delete('/admin/product/delete/@product.Id')" class="btn btn-danger btn-sm ms-2 me-auto">Delete</a>
                </div>
            </div>
        </div>
    }

</div>


@section Scripts {
    <script src="~/js/product.js"></script>
}