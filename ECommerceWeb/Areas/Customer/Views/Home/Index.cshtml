@model IEnumerable<Product>

<div class="text-center mb-5">
    <h1 class="display-4">Welcome</h1>
    <p>Your One-Stop Shop for Everything!</p>

    <form action="@Url.Action("Search", "Home")" method="get" class="mb-3">
        <div class="mb-3">
            <input type="text" name="query" class="form-control" placeholder="Search here..." />
        </div>
    </form>

</div>


<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-12 col-lg-3 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="...">

                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.BriefDescription</p>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">
                            View
                        </a>
                        <h5 class="mb-0 text-primary fw-bold">@product.Price.ToString("c")</h5>
                    </div>
                </div>
            </div>
        </div>
    }
    
</div>