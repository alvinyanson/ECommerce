@using ECommerceWeb.Models

@model PaginatedResult<Product>

<div class="text-center mb-5">
    <h1 class="display-4">Welcome</h1>
    <p>Your One-Stop Shop for Everything!</p>

    <form action="@Url.Action("Search", "Home")" method="get" class="mb-3">
        <div class="input-group mb-3">
            <input type="text" name="query" value="@ViewBag.Query" class="form-control" placeholder="Search here..." />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>

</div>


<div class="row">
    @foreach (var product in Model.Result)
        @* @foreach (var product in Model.OrderByDescending(product => product.Id)) *@

    {
        <div class="col-12 col-lg-3 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" style="object-fit: cover; height: 200px">

                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.BriefDescription</p>
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-prodId="@product.Id" class="btn btn-primary">
                            View
                        </a>
                        <h5 class="mb-0 text-primary fw-bold">@product.Price.ToString("c")</h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" asp-route-p="@(Model.Page - 1)">Previous</a>
        </li>

        @for(var pageNumber = 1; pageNumber <= Model.TotalCount; pageNumber++)
        {
            if(pageNumber == Model.Page)
            {
                <li class="page-item active">
                    <span class="page-link">@pageNumber</span>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-route-p="@pageNumber">@pageNumber</a>
                </li>
            }
        }

        <li class="page-item @(Model.Page == Model.TotalCount ? "disabled" : "")">
            <a class="page-link" asp-route-p="@(Model.Page + 1)">Next</a>
        </li>
    </ul>
</div>